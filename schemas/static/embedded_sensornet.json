{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Embedded SensorNet Static Metadata",
    "description": "Metadata to describe a bus of SensorNodes with a passive wireless transmission system embedded in the waste-drum. Each node includes humidity, temperature and pressure sensors.",
    "type": "object",
    "required": [
        "drum_id",
        "components"
    ],
    "properties": {
        "drum_id": {
            "description": "Drum's unique identifier specified by the facility",
            "type": "string"
        },
        "components": {
            "description": "Main components of the sensing system",
            "type": "object",
            "required": [
                "sensornet",
                "embedded_tag"
            ],
            "properties": {
                "sensornet": {
                    "description": "List of SensorNodes embedded in the drum.",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "node_id",
                            "sensors"
                        ],
                        "properties": {
                            "node_id": {
                                "description": "SensorNode's ID",
                                "type": "string"
                            },
                            "hw_version": {
                                "description": "PCB version.",
                                "type": "string"
                            },
                            "manufacturer": {
                                "description": "Institution/company responsible for the product.",
                                "type": "string"
                            },
                            "sensors": {
                                "type": "array",
                                "items": {"$ref": "sensor.json"}
                            }
                        }
                    }
                },
                "embedded_tag": {
                    "description": "Embedded system to collect data from the SensorNodes and to transmit them wireless through the drum shell.",
                    "type": "object",
                    "properties": {
                        "tag_id": {
                            "description": "Embedded device unique identifier.",
                            "type": "string"
                        },
                        "manufacturer": {
                            "description": "Institution/company responsible for the product.",
                            "type": "string"
                        },
                        "hw_version": {
                            "description": "PCB version.",
                            "type": "string"
                        },
                        "fw_version": {
                            "description": "Firmware version.",
                            "type": "string"
                        }
                    }
                }
            }
        },
        "data_format": {
            "description": "Structure of the measurement data gathered by the system",
            "type": "object",
            "properties": {
                "tag_id": {
                    "description": "ID of the system embedded in the drum",
                    "type": "number"
                },
                "utc_time": {
                    "description": "Starting time of the measurement",
                    "type": "number"
                },
                "energy_level": {
                    "description": "Energy storage voltage at the beginning of the message uplink",
                    "type": "number"
                },
                "data": {
                    "description": "List of SensorNode's data",
                    "type": "array",
                    "items": {
                        "description": "Data from a SensorNode in format: [SensorNode_ID, Humidity, Temperature, Pressure]",
                        "type": "array",
                        "items": {
                            "type": "number"
                        }
                    }
                }
            }
        }
    }
}